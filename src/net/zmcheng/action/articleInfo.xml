<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="articleInformation"  namespace="/text"  extends="struts-default">
    
        <action name="write" class="net.zmcheng.action.ArticleAction"  method="write">
            <result>/WEB-INF/wp-admin/writerAfter.jsp</result>
        </action>   
        <action name="open" class="net.zmcheng.action.ArticleAction"  method="open">
            <result>/WEB-INF/wp-admin/showArticle.jsp</result>
        </action>   
         <action name="edit" class="net.zmcheng.action.ArticleAction"  method="edit">
            <result>/WEB-INF/wp-admin/editArticle.jsp</result>
        </action>   
        <action name="edit2" class="net.zmcheng.action.ArticleAction"  method="edit2">
            <result>/WEB-INF/wp-admin/writerAfter.jsp</result>
        </action>   
         <action name="articles" class="net.zmcheng.action.AllArticleAction" >
            <result>/WEB-INF/wp-admin/allArticle.jsp</result>
        </action>  
       
       <action name="allMessages" class="net.zmcheng.action.MessageAction" >
            <result>/WEB-INF/wp-admin/allMessages.jsp</result>
        </action>
 </package>
</struts>