<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <package name="userInformation"  namespace="/user"  extends="struts-default">
    
        <action name="login" class="net.zmcheng.action.LoginRegisterAction"  method="login">
            <result>/WEB-INF/view/index.jsp</result>
            <result name="login">/WEB-INF/view/login.jsp</result>
        </action>   
       <action name="register" class="net.zmcheng.action.LoginRegisterAction"  method="register">
            <result>/WEB-INF/view/index.jsp</result>
            <result name="input">/WEB-INF/view/register.jsp</result>
        </action>   
        <action name="GetUser" class="net.zmcheng.action.LoginRegisterAction">
            <result>/WEB-INF/view/register.jsp</result>
        </action>   
          <action name="quit" class="net.zmcheng.action.LoginRegisterAction" method="quit">
            <result>/WEB-INF/view/index.jsp</result>
        </action>   
         <action name="uploadphotoaction" class="net.zmcheng.action.UploadPhotoAction" >
            <result>/WEB-INF/view/uploadPhoto.jsp</result>
        </action>  
    </package>
    
      <package name="userAjax"  namespace="/ajax" extends="json-default">     
        <action name="updatePsw" class="net.zmcheng.action.UpdateUserAction" method="updatePsw">
            <result name="success" type="json">
               <param name="root">result</param>
            </result> 
        </action>          
         <action name="updateEmail" class="net.zmcheng.action.UpdateUserAction" method="updateEmail">
            <result name="success" type="json">
               <param name="root">result</param>
            </result>    
        </action>    
         <action name="updatePhone" class="net.zmcheng.action.UpdateUserAction" method="updatePhone">
            <result name="success" type="json">
               <param name="root">result</param>
            </result>    
        </action>     
         <action name="updateHome" class="net.zmcheng.action.UpdateUserAction" method="updateHome">
            <result name="success" type="json">
               <param name="root">result</param>
            </result>    
        </action>         
        <action name="getCitys" class="net.zmcheng.action.UpdateUserAction" method="GetCitys">
            <result name="success" type="json">
               <param name="root">citys</param>
            </result>    
        </action>    
    </package>
 
   
</struts>